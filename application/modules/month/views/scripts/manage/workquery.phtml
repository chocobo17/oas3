			var URL = 'http://oas.cc.scu.edu.tw/oas/';
			var adquery_action = 'http://oas.cc.scu.edu.tw/oas/month/workpoint/process';
			
			$(function(){
				$("#cancelBtn").click(function(){
					self.parent.tb_remove();
				});
			});
